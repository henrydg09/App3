<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:App3" 
             x:Class="App3.MainPage">


    <StackLayout>
        
        <Picker x:Name="Picker" Title="Disciplina">
            <Picker.Items></Picker.Items>
        </Picker>

        <Picker x:Name="Picker2"  Title="Professor">
            <Picker.Items></Picker.Items>
        </Picker>

        <Entry x:Name="Entry1" Placeholder="Matrícula do Aluno" />
        <Entry x:Name="Entry2" Keyboard="Numeric" Placeholder="nota" />



        <Label x:Name="Label1" IsVisible="false"
               Text="Nota registrada" TextColor="DarkGreen" />
        <Label x:Name="Label2" IsVisible="false"
               Text="Nao foi possivel registrar nota" TextColor="Red" />
        <Label x:Name="Label3" IsVisible="false"
               Text="Aprovado" TextColor="DarkGreen" />
        <Label x:Name="Label4" IsVisible="false"
               Text="Reprovado" TextColor="Red" />



        <Button x:Name="Button2" Text="avaliar"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked" />


    </StackLayout>

</ContentPage>